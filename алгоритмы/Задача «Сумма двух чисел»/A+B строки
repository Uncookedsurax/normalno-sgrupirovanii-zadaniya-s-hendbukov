#include <iostream>
#include <string>

int main() {
  
    int n;
    std::cin >> n;

  
    std::string A, B;
    std::cin >> A >> B;

   
    if (A.length() != n || B.length() != n) {
        std::cout<< std::endl;
        return 1;
    }

   
    std::string C;
    for (int i = 0; i < n; ++i) {
        C.push_back(A[i]);  
        C.push_back(B[i]);  
    }


    std::cout << C << std::endl;

    return 0;
}
